{
  "manifest_version": 2 ,
  "name": "Chrome AudioBud",
  "author": "Eric Delacruz",
  "version": "1.0",
  "description": "KU // TGDI // Chrome Audio Visualizer Project",
  "permissions": [
    "tabCapture",
    "activeTab",
    "declarativeContent",
    "storage",
    "tabs",
    "notifications"],

  "icons": {
    "16": "images/AudioBud16.png",
    "32": "images/AudioBud32.png",
    "48": "images/AudioBud48.png",
    "128": "images/AudioBud128.png"
  },

  "browser_action": {
    "default_icon": {
      "16": "images/AudioBud16.png",
      "32": "images/AudioBud32.png",
      "48": "images/AudioBud48.png",
      "128": "images/AudioBud128.png"
    },
    "default_title": "AudioBud"
  },

  "background": {
		"scripts": ["scripts/background.js"],
		"persistent": false
	}
}
